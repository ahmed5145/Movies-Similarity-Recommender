{
    "version": 2,
    "builds": [
      {
        "src": "movies-similarity-frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "movies-similarity-backend/app/**/*.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/app/(.*)",
        "dest": "movies-similarity-backend/app/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "/movies-similarity-frontend/build/$1"
      }
    ],
    "build": {
      "env": {
        "NODE_OPTIONS": "--openssl-legacy-provider"
      }
    }
  }
  