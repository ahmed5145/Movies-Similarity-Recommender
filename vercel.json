{
    "version": 2,
    "builds": [
      {
        "src": "movies-similarity-frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "movies-similarity-backend/app/main.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "movies-similarity-backend/app/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "movies-similarity-frontend/build/$1"
      }
    ]
  }
  