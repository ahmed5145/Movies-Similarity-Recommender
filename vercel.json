{
    "version": 2,
    "builds": [
      {
        "env": {
        "NODE_OPTIONS": "--openssl-legacy-provider"
        },
        "src": "movie-similarity-frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "movie-similarity-frontend/build"
        }
      },
      {
        "src": "backend/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/movie-similarity-backend/app.py" 
      }
    ]
  }
  